<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity=""
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:fontFamily=""
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="60dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvPrefixHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height_prefix"
            android:fontFamily=""
            android:textStyle="normal"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/etHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:hint="Ejemplo: 1.75m"
            android:paddingBottom="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="15dp"
            android:paddingTop="0dp"
            android:drawablePadding="10dp"
            android:inputType="numberDecimal"
            android:maxLength="20" />

        <TextView
            android:id="@+id/tvPrefixWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight_prefix"
            android:fontFamily=""
            android:textStyle="normal"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:hint="Ejemplo: 70Kg"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="0dp"
            android:drawablePadding="10dp"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:layout_marginTop="0dp"/>

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Calcular"
            android:background="@drawable/style_circle_bg"
            android:textColor="@color/white"
            android:visibility="visible"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/tvPreResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:fontFamily=""
            android:textStyle="normal"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily=""
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:visibility="invisible"/>


    </LinearLayout>
</layout>